# Borgia Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/borgia
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true
API_SECRET_KEY=your-secret-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/borgia.log

# Cheminformatics Configuration
RDKIT_MOLFILES_PATH=data/molecules/
CHEMBL_API_URL=https://www.ebi.ac.uk/chembl/api/data/
PUBCHEM_API_URL=https://pubchem.ncbi.nlm.nih.gov/rest/pug/

# Probabilistic Computing Settings
MONTE_CARLO_SAMPLES=10000
BAYESIAN_INFERENCE_CHAINS=4
MCMC_WARMUP_STEPS=1000
MCMC_SAMPLES=5000

# Fuzzy Logic Settings
FUZZY_MEMBERSHIP_RESOLUTION=1000
FUZZY_DEFUZZIFICATION_METHOD=centroid
FUZZY_SIMILARITY_THRESHOLD=0.7

# Performance Settings
PARALLEL_WORKERS=4
BATCH_SIZE=1000
CACHE_SIZE=10000
MEMORY_LIMIT_GB=8

# Integration Settings
HEGEL_API_URL=http://localhost:8001
LAVOISIER_API_URL=http://localhost:8002
GOSPEL_API_URL=http://localhost:8003
BENE_GESSERIT_API_URL=http://localhost:8004
NEBUCHADNEZZAR_API_URL=http://localhost:8005

# Evidence Propagation Settings
EVIDENCE_UPDATE_INTERVAL=30
UPSTREAM_POLLING_INTERVAL=60
DOWNSTREAM_PUSH_INTERVAL=15

# Molecular Comparison Settings
SIMILARITY_ALGORITHMS=tanimoto,dice,cosine,jaccard
FINGERPRINT_TYPES=morgan,rdkit,maccs,avalon
SUBSTRUCTURE_MATCHING=exact,fuzzy,probabilistic

# Storage Settings
DATA_DIRECTORY=data/
MODELS_DIRECTORY=models/
CACHE_DIRECTORY=cache/
RESULTS_DIRECTORY=results/

# Security Settings
ENABLE_AUTHENTICATION=false
JWT_SECRET_KEY=your-jwt-secret-here
JWT_EXPIRATION_HOURS=24

# Development Settings
DEVELOPMENT_MODE=true
ENABLE_PROFILING=false
ENABLE_BENCHMARKING=false
ENABLE_DEBUGGING=true

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# External Services
WANDB_PROJECT=borgia
WANDB_ENTITY=your-entity
MLFLOW_TRACKING_URI=http://localhost:5000 